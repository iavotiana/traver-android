<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="634dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/grbSexe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/rdHomme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Homme" />

                    <RadioButton
                        android:id="@+id/rdFemme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Femme" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="512dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="Poids" />

                    <EditText
                        android:id="@+id/txtPoids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="Taille" />

                    <EditText
                        android:id="@+id/txtTaille"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="Age" />

                    <EditText
                        android:id="@+id/txtAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="536dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCalcule"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CALCULER" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgEmoji"
                android:layout_width="182dp"
                android:layout_height="227dp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/test2" />

            <TextView
                android:id="@+id/txtResultat"
                android:layout_width="wrap_content"
                android:layout_height="228dp"
                android:background="#00A82222"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Pour clarifier, Android Studio utilise actuellement un éditeur de mise en page visuel appelé &quot;Layout Editor&quot; qui vous permet de concevoir les interfaces utilisateur graphiquement. Le code XML correspondant à la mise en page est généré automatiquement en fonction de vos modifications dans l'éditeur visuel." />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>